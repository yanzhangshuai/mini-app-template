{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/component/*": ["src/component/modules/*"],
      "@/store/*": ["src/store/modules/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "src", "type"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "type/**/*.d.ts"],
  "exclude": ["node_modules", "config"],
  "compileOnSave": false
}
